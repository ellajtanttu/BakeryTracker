@using Tracker.Models;

<h1>Vendors</h1>
<ul>
@if (@Model.Count == 0)
{
  <h3> No Vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <li><b><a href='/vendors/@vendor.Id'>@vendor.Name</a></b><br>@vendor.Description</li>
}

</ul>


<p><a href='/'>Home</a></p>
